-if @user
	%header
		%h1
			=@user.full_name + "'s"
			Profile Page
		%h2
			=@user.full_name + "'s"
			Tweets
	

-if @user == current_user
	%form{action: '/newtweet', method: 'POST'}
		%label{for: 'tweet_text'} Enter Your Text
		%br
		%textarea{name: 'tweet_text'}
		%br
		%input{type: 'submit', value: 'Post It!'}
		%br
		%br


-@user.tweets.each do |tweet|	
	=tweet.tweet_text
	%br
	=tweet.tweet_time.strftime('%e %b %Y %H:%m:%S%p')
	%br
	%br